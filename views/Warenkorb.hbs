<table>
    <thead>
        <tr>
            <th>Produkt</th>
            <th>Einzelpreis</th>
            <th>Anzahl</th>
            <th>Total</th>
        </tr>
    </thead>
    <tbody>
        {{#each goodsInBasket}}
        <tr>
            <td>
                <a href="http://localhost:8080/Details/{{this.id}}">{{this.productName}}</a>
            </td>
            <td>
                <button onclick="location.href='http://localhost:8080/api/pollproduct/{{this.id}}'">-</button>
                {{#if this.specialOffer}}
                CHF {{twoDecimals this.specialOffer}}
                {{else}}
                CHF {{twoDecimals this.normalPrice}}
                {{/if}}
                <button
                    onclick="location.href='http://localhost:8080/api/addproduct/{{this.id}}?isWarenkorb=true'">+</button>
            </td>
            <td>{{this.quantity}}</td>
            {{#if this.specialOffer}}
            <td>CHF {{multiply this.quantity this.specialOffer}}</td>
            {{else}}
            <td>CHF {{multiply this.quantity this.normalPrice}}</td>
            {{/if}}
        </tr>
        {{/each}}
    </tbody>
</table>
<p id="totalPreis">Total: CHF {{twoDecimals basketValue}}</p>
<button onclick="location.href='http://localhost:8080/Checkout'">Zur Bestellung</button>